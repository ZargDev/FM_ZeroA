<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base para ítems del menú -->
    <!-- Item de menú dentro del BottomSheet -->
    <style name="FM_ZeroA.MenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Icono pequeño dentro del item -->
    <style name="FM_ZeroA.MenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <!-- Texto junto al icono -->
    <style name="FM_ZeroA.MenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Línea divisoria entre opciones -->
    <style name="FM_ZeroA.MenuDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">?attr/colorOnSurfaceVariant</item>
    </style>
    <!---->
    <!-- Fila de acción (ícono + texto) -->
    <style name="FM_ZeroA.ActionRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Texto de acción -->
    <style name="FM_ZeroA.ActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Separador entre acciones -->
    <style name="FM_ZeroA.ActionSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">.5dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">?attr/colorOnSurfaceVariant</item>
    </style>

</resources>