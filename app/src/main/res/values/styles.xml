<resources>
    <!-- Base application theme. -->
    <style name="Theme.FM_ZeroA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Personaliza aquí colores, tipografías, etc. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <!-- ... otros atributos ... -->
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>

    </style>

    <style name="ActionRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadlineSmall</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
